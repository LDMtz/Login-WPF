<UserControl x:Class="MVVM.CustomControls.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVM.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    <PasswordBox x:Name="txbContraseña"
                             FontSize="13"
                             FontWeight="Medium"
                             FontFamily="Montserrat"
                             Foreground="{StaticResource titleColor2}"
                             CaretBrush="{StaticResource color1}"
                             BorderBrush="{StaticResource txtBoxBorder1}"
                             BorderThickness="0,0,0,1"
                             VerticalContentAlignment="Center"
                             Padding="28,0,0,0">
        <PasswordBox.Background>
            <ImageBrush ImageSource="../Images/key.png"
                                        Stretch="None"
                                        AlignmentX="Left"/>
        </PasswordBox.Background>
    </PasswordBox>
</UserControl>
